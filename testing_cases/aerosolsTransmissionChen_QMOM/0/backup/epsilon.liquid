FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      epsilon.water;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 1e-8;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.52;
    }
    outlet
    {
        type            inletOutlet;
        phi             phi.liquid;
        inletValue      $internalField;
        value           $internalField;
    }
    leftWall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    upperWall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    lowerWall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    backWall
    {
        type            epsilonWallFunction;
        value           $internalField;
    }
    front
    {
        type            symmetryPlane;
    }
}

